{
  "name": "vsctrwh",
  "displayName": "Custom Chat Interface",
  "description": "Custom chat interface extension that disables VS Code's built-in chat and provides a custom chat experience",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "publisher": "prdy-trumio",
  "repository": {},
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vsctrwh.openChat",
        "title": "Open Custom Chat",
        "icon": "$(comment-discussion)"
      }
    ],
    "keybindings": [
      {
        "command": "vsctrwh.openChat",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "vsctrwh.openChat",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "Custom Chat",
      "properties": {
        "vsctrwh.disableBuiltInChat": {
          "type": "boolean",
          "default": true,
          "description": "Disable VS Code's built-in chat features"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vsctrwhChat",
          "title": "Chat",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "vsctrwhChat": [
        {
          "id": "vsctrwhCustomChat",
          "name": "Custom Chat",
          "type": "webview",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
